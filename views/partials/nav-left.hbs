<div class="d-flex flex-column"
  style="width: 330px; height:100%;">

  <div class="d-flex justify-content-around mt-3 me-5">
    <a href="/" style="text-decoration: none;"> 
      <h5 class="fw-bold" style="color:#E3E3E3;">My Adventure Log</h3>
    </a>
    
  </div>

  <div class="d-flex justify-content-center" style="border-bottom:1px solid #363636; width:100%;">
    <a href="/users/{{user._id}}" style="text-decoration:none">
    {{#if user.image}}
    <div class="mt-3 me-4" style="height:150px; width:150px;"> 
      <img class="image" height="100" weight="100" src="{{user.image}}"style="border:2px solid #4c4c4d; border-radius:50%;width:115px; height:115px">
    </div>
    {{else}}
    <div class="d-flex justify-content-center mt-3 me-5">
      <img class="image" height=120 weight=120 src="https://i.imgur.com/w3dssj0.png"
        style="border:2px solid #4c4c4d; border-radius:50%">
    </div>
    {{/if}}
    <div class="mt-2 ms-4">
      <p class="fw-bold" style="color:#C4C4C4;">{{user.name}}</p>
    </div>
    </a>
  </div>
  <br>

  <!-- <div class="d-flex justify-content-start mt-3 ms-5"-->
  <div style="width:250px;">
    <div class="p-2 justify-contect-start ms-4">
      <a href="/story" style="text-decoration:none;">
        <h6 class="fw-bold" style="color:#B5B5B5; ">動態</h6>
      </a>
      <div class="mt-4">
        <a  href="/dives" style="text-decoration:none;">
          <h6 class="fw-bold" style="color:#B5B5B5; ">潛水日誌</h6>
        </a>
      </div>
    </div>
  </div>


  <div class="mt-auto p-2 container d-flex  align-self-endd justify-content-start ms-3 mb-3">
    <div class="row ms-2 align-items-end" style="width: 300px;">
      {{#if isAuthenticated}}
      <div class="col-8" style="text-decoration:none;">
        <a class="fw-bold" style="text-decoration:none; color:#B5B5B5;" href="/logout">登出</a>
      </div>
      {{else}}
      <div class="col-8" style="text-decoration:none;">
        <a class="fw-bold" style="text-decoration:none; color:#B5B5B5;" href="/login">登入</a>
      </div>
      {{/if}}
      <div class="col-4">
        <a style="border:1px solid blud;text-decoration:none;" href="/users/{{user._id}}"><i class="fa-solid fa-gear"style="color:#B5B5B5;"></i></a>
      </div>
    </div>
  </div>
</div>