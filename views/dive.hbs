<div class="row" style="min-height:100vh">
  <div class="col-2" style="background-color:#303030;">
    {{> nav-left}}
  </div>

  <div class="col-10" style="background-color:#202a3c">
    <div class="d-flex justify-content-start mt-5 ms-5" style="color:#F5F5F5;">
      <a href="javascript:history.back()">
        <i class="fa-solid fa-arrow-left-long" style="color: #b9c1cf;"></i>
      </a>
    </div>

    <div class="d-flex ms-5 mt-3" style="height: 80%;">
      <div class="" style="border:2px solid #F5F5F5;">
        <img class="justify-content-start" src="{{dive.image}}" style="width:650px; height:500px; border-bottom:2px solid #F5F5F5;">
        <div class="mt-2 ms-2 me-2"style="width: 100%px; height: 30%;">
          <p style="color:#F5F5F5;">筆記摘要：&#13;{{dive.note}}</p>
        </div>
      </div> 

      <div class="container d-flex justify-content-center ms-2" style="width: 40%; height:100%; border:2px solid #F5F5F5;">
        <div class="mt-3 flex-fill row" style="width:100%; height: 5%; color:#F5F5F5;">
          <h5>{{dive.location}}</h5>
          <div class="mt-3 col " style="width: 45%; color:#F5F5F5;">
            <div class="align-items-center mt-3">
              <h6>日期：{{dive.date}}</h6>
            </div>
            <div class="align-items-center mt-3 mb-2">
              <h6>方式：{{dive.type}}</h6>
            </div>
          </div>

          <div class="mt-3 col mb-4" style="width: 45%; color:#F5F5F5;">
            <div class="align-items-center mt-3">
              <h6>主題：{{dive.subject}}</h6>
            </div>
            <div class="align-items-center mt-3">
              <h6>天氣：{{dive.weather}}</h6>
            </div>
          </div>
          <hr>
          
          <div class="mt-3 col " style="width: 45%; color:#F5F5F5;">
            <div class="align-items-center mt-3">
              <h6>水面溫度：{{dive.surfaceTemp}}&nbsp;<span>℃</span></h6>
            </div>
            <div class="align-items-center mt-3 mb-2">
              <h6>潛水時間：{{dive.divingTime}}&nbsp;分鐘</h6>
            </div>
            <div class="align-items-center mt-3 mb-2">
              <h6>殘壓：{{dive.residualPressure}}&nbsp;bar</h6>
            </div>
          </div>

          <div class="mt-3 col " style="width: 45%; color:#F5F5F5;">
            <div class="align-items-center mt-3">
              <h6>水下溫度：{{dive.underwaterTemp}}&nbsp;℃</h6>
            </div>
            <div class="align-items-center mt-3 mb-2">
              <h6>最大深度：{{dive.maxDepth}}&nbsp;公尺</h6>
            </div>
            <div class="align-items-center mt-3 mb-2">
              <h6>能見度：{{dive.visibility}}&nbsp;公尺</h6>
            </div>
          </div>

        </div>

        
      </div>
    </div>

    

  </div>

  

</div>  